<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/viewDoctorPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_setting"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/ivDoctorPhone"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_lion"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_weight="1"
                    android:text="@string/doctor_my_change_inform_picture"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/LargeTextSize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_grey_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_setting"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                       android:padding="15dp"
                     >

                    <TextView
                      style="@style/info_label_style"
                           android:gravity="right"
                        android:text="医生名：" />

                    <EditText
                        android:id="@+id/etDoctorName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:background="@null"
                        android:gravity="center"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/BasicTextSize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_grey_right_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/home_line_bit" />

                <LinearLayout
                    android:id="@+id/viewDoctorAddress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                       style="@style/info_label_style"
                        android:gravity="right"
                        android:text="所在地区：" />

                    <TextView
                        android:id="@+id/tvDoctorAddress"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/BasicTextSize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_grey_right_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/home_line_bit" />

                <LinearLayout
                    android:id="@+id/viewDoctorHospital"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        style="@style/info_label_style"
                        android:gravity="right"
                        android:text="所属医院：" />

                    <TextView
                        android:id="@+id/tvDoctorHospital"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/BasicTextSize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_grey_right_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/home_line_bit" />

                <LinearLayout
                    android:id="@+id/viewDoctorDepartment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                       style="@style/info_label_style"
                        android:gravity="right"
                        android:text="所属科室：" />

                    <TextView
                        android:id="@+id/tvDoctorDepartment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/BasicTextSize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_grey_right_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/home_line_bit" />

                <LinearLayout
                    android:id="@+id/viewJobTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        style="@style/info_label_style"
                        android:gravity="right"
                        android:text="职称：" />

                    <TextView
                        android:id="@+id/tvJobTitle "
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/BasicTextSize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_grey_right_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/home_line_bit" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        style="@style/info_label_style"
                        android:gravity="right"
                        android:text="邮箱" />

                    <EditText
                        android:id="@+id/etDoctorEmil"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:background="@null"
                        android:gravity="center"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/BasicTextSize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_grey_right_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/home_line_bit" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        style="@style/info_label_style"
                        android:gravity="right"
                        android:text="手机：" />

                    <EditText
                        android:id="@+id/etDoctorNumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:background="@null"
                        android:gravity="center"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/BasicTextSize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_grey_right_arrow" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>