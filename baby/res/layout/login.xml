<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    <include layout="@layout/common_title_bar"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/login_lion"
        android:layout_marginTop="60dp" android:layout_gravity="center_horizontal"/>
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="vertical">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="0dp" android:orientation="horizontal" android:layout_weight="1"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:gravity="center_vertical">
            <Button android:id="@+id/btnBaby" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="我是家长"
                android:paddingLeft="25dp" android:paddingRight="25dp" android:background="@drawable/btn_selector" 
                android:textSize="@dimen/LargeTextSize" android:textColor="@color/white"/>
            <View android:layout_width="0dp" android:layout_height="fill_parent" android:layout_weight="1"/>
            <Button android:id="@+id/btnDoctor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="我是医生"
                android:paddingLeft="25dp" android:paddingRight="25dp" android:background="@drawable/btn_selector"
                android:textSize="@dimen/LargeTextSize" android:textColor="@color/white"/>
        </LinearLayout>
        <TextView android:id="@+id/tvAppInfo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="软件信息XXXXX"
            android:textColor="@color/gold" android:textSize="@dimen/BasicTextSize" android:gravity="center" />
        <TextView android:id="@+id/tvAppVersion" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="软件版本号XXXXX"
            android:textColor="@color/gold" android:textSize="@dimen/BasicTextSize" android:gravity="center" />
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="网络XXXXX认证码"
            android:textColor="@color/gold" android:textSize="@dimen/BasicTextSize" android:gravity="center" android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>